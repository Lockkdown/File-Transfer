# ============================================
# Drive-lite Environment Configuration (EXAMPLE)
# ============================================
# Copy file này thành .env và điền giá trị thật

# --------------------------------------------
# SQL Server Connection
# --------------------------------------------
DB_HOST=localhost
DB_PORT=1433
DB_NAME=FileTransfer
DB_USER=your_username
DB_PASSWORD=your_password

# --------------------------------------------
# Server TCP Configuration
# --------------------------------------------
SERVER_PORT=9000
MAX_FILE_SIZE=524288000
STORAGE_PATH=./storage
SESSION_EXPIRY_HOURS=24
RESET_TOKEN_EXPIRY_MINUTES=15

# --------------------------------------------
# Demo Environment
# --------------------------------------------
SERVER_BIND_ADDRESS=0.0.0.0
WIRESHARK_INTERFACE=Ethernet

# --------------------------------------------
# SSL/TLS Encryption (RECOMMENDED FOR PRODUCTION)
# --------------------------------------------
# Generate certificate: run scripts/generate-ssl-cert.ps1
# SSL_KEYSTORE_PATH=./ssl/server.p12
# SSL_KEYSTORE_PASSWORD=drivelite123
# 
# For client truststore (optional, can use TrustAll for dev):
# SSL_TRUSTSTORE_PATH=./ssl/truststore.p12
# SSL_TRUSTSTORE_PASSWORD=drivelite123

# --------------------------------------------
# SMTP Email Configuration (for OTP)
# --------------------------------------------
# Set SMTP_ENABLED=true to actually send emails
# If false, OTP will be logged to console (for development)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Drive-lite

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/server.log
